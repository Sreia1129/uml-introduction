@startuml 診療記録
class 医局 {
  - 医局名: string
}
class 医師 {
  - 名前: string
  - 所属医局: string
  + 診察する(患者): void
  + 診察記録を作成する(患者): 診察記録
}

class 患者 {
  - 名前: string
  - 担当医: 医師
  + 診察記録を取得する(): 診察記録
}

class 診察記録 {
  - 日付: date
  - 診察内容: string
}

医局 "1" -- "*" 医師: 所属
医師 "1" -- "*" 患者: 診察する
患者 "1" -- "1" 医師: 担当医を設定する
患者 "1" -- "1" 診察記録: 診察記録を取得する
@enduml